<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <link rel="shortcut icon" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <link rel="stylesheet" href="/stylesheets/meyerreset.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="/stylesheets/application.css" type="text/css" media="screen" />
    <% @stylesheets.each do |sheet| %>
    <link rel="stylesheet" href="<%= sheet %>" type="text/css" media="screen" />
    <% end %>
    <% @javascripts.each do |js| %>
    <script src="<%= js %>" type="text/javascript" charset="utf-8"></script>
    <% end %>
  </head>
  <body>
    <div id="wrap">
      <% if @show_back_link %>
      <div id="back-link">
        <a href="/">‹‹‹ go back to the test overview</a>
      </div>
      <% end %>
      <div id="page-title">
        <h1><%= @title %></h1>
        <h2><%= @subtitle %></h2>
      </div>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
    </div>
  </body>
</html>